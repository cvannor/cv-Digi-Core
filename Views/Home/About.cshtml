@using cvDigiCore.ViewModels;
@model AboutViewModel

@{
    ViewData["Title"] = "About";
}

    <div class="about-page">

        <div class="container-fluid" style="padding-left:0; padding-right: 0;">
            <div class="row no-gutters">
                <div class="about-container col-md-6">
                    <div class="about-header" style="margin: 0px 0 20px 10px;display: flex; flex-direction:row">
                        @if (Model.Profile.ProfilePicture != null)
                        {
                        <img src="~/fileDirectory/Profile/@Model.Profile.ProfilePicture" />

                        }
                        <h2>About Me</h2>
                    </div>

                    <div class="biography">
                        @Model.Profile.Bio
                    </div>
                    <div class="about-buttons">
                        <a asp-area="" asp-controller="Home" asp-action="Resume"><i class="fas fa-file-alt fa-2x"></i><label>View Resume</label></a>
                        <a asp-area="" asp-controller="Home" asp-action="Contact"><i class="fas fa-mobile fa-2x"></i><label>Contact Me</label></a>
                    </div>
                </div>
                <div style="text-align:center;" class="skills-container col-md-6">
                    <h5>Skills/Technologies</h5>
                    <div class="skills">
                        <ul>
                            @if (Model.Categories.Count() > 0)
                            {
                                foreach (var cat in Model.Categories)
                                {
                                    <li>@cat.Name</li>
                                }
                            }
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>

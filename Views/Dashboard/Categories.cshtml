@model IEnumerable<cvDigiCore.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Categories</h2>


                @if (Model.Count() > 0)
                {

                    <table id="datatable" class="table table-striped border">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        <!--<a asp-controller="Dashboard" asp-action="DeleteProject" asp-route-id="" class="btn btn-danger btn-sm">Delete</a>-->

                                        <button type='button' onclick="DeleteCategory(@item.ID, this)" class="btn btn-danger btn-sm">Delete</button>
                                    </td>

                                </tr>


                            }
                        </tbody>
                    </table>

                }
                else
                {
                    <p>No categories yet. Create new categories for projects!</p>
                }

            </div>
            <div class="col-md-6"></div>
        </div>



    </div>
    



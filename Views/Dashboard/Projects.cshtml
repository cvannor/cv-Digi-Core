
@model IEnumerable<cvDigiCore.Models.Project>
@{
    ViewData["Title"] = "Projects";
}


<div class="container p-0 m-0">
    <div class="row">
        <div class="col-md-9">
            <h2>Projects</h2>

        </div>
        <div class="col-md-3">
            <a asp-controller="Dashboard" asp-action="Project" class="btn btn-info form-control">Create New Project</a>
        </div>

    </div>
    

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Count() > 0)
            {
                <table id="datatable" class="table table-striped border">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Date Added</th>
                                <th></th>
                            </tr>
                        </thead>
                      
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.DateAdded
                                    </td>
                                    <td>
                                        <!--<a asp-controller="Dashboard" asp-action="DeleteProject" asp-route-id="" class="btn btn-danger btn-sm">Delete</a>-->

                                        <button type='button' onclick="DeleteProject(@item.ID, this)" class="btn btn-danger btn-sm">Delete</button>
                                        <a asp-controller="Dashboard" asp-action="Project" asp-route-id="@item.ID" class="btn btn-success btn-sm">Edit</a>
                                    </td>

                                </tr>


                            }
                        </tbody>
                </table>

            }
            else
            {
                <p>No projects yet. Start working!</p>
            }


        </form>
    </div>
</div>
@section Scripts{
    <script>
            $(document).ready( function () {
	           $('#datatable').dataTable();
	       } );



    </script>

}

